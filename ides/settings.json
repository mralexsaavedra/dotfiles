{
  // --- VISUALIZACIÓN & ZEN MODE (Tu estilo hardcore) ---
  "window.zoomLevel": 0.5,
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.location": "top", // O "hidden" si quieres extremismo
  "workbench.statusBar.visible": false, // Muy limpio
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "telemetry.telemetryLevel": "off",

  // --- EDITOR & FUENTES (CaskaydiaCove Nerd Font + Ligaduras) ---
  "editor.fontFamily": "'CaskaydiaCove Nerd Font', monospace",
  // Activamos las cursivas bonitas (ss01) y ligaduras (calt)
  "editor.fontLigatures": "'calt', 'ss01'", 
  "editor.fontSize": 14,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  
  // --- MEJORAS DE NAVEGACIÓN (El toque 10/10) ---
  "editor.stickyScroll.enabled": true, // IMPRESCINDIBLE: Mantiene el nombre de la func/clase arriba
  "editor.bracketPairColorization.enabled": true, // Nativo y rápido
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.renderWhitespace": "selection", // Solo muestra los puntos de espacio si seleccionas texto

  // --- SUGESTIONES E INTELIGENCIA ---
  "editor.inlayHints.enabled": "offUnlessPressed", // Menos ruido visual: solo aparecen si mantienes pulsado Ctrl/Cmd
  "editor.inlineSuggest.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true // Vital para Tailwind dentro de strings en React
  },

  // --- TEMA E ICONOS ---
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  // NOTA: Si instalaste Material Icon Theme, cambia "symbols" por "material-icon-theme"
  "workbench.iconTheme": "symbols", 
  // NOTA: Si instalaste Carbon Product Icons, cambia "fluent-icons" por "carbon-product-icons"
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#00000044", // Resalte sutil
    "editor.lineHighlightBorder": "#ffffff11"
  },
  
  // --- FUENTES PREMIUM (Estilo Operator Mono) ---
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword",
          "storage",
          "storage.type",
          "entity.other.attribute-name",
          "variable.language.this",
          "variable.language.super"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // --- LIMPIEZA DE EXPLORADOR (Nesting) ---
  "explorer.fileNesting.enabled": true, // AGRUPA archivos relacionados
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, .npmrc, yarn.lock, pnpm-lock.yaml",
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "requirements.txt": "requirements-dev.txt",
    ".env": ".env.*" 
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true, // Oculta basura de Python
    "**/*.pyc": true
  },

  // --- AUTOMATIZACIÓN FRONTEND ---
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // "Explicit" es más seguro que "always" para evitar loops
  },
  "prettier.requireConfig": true,
  "prettier.semi": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "git.autofetch": true, // Mantén tu Git actualizado solo

  // --- RENDIMIENTO ---
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/build": true,
    "**/.venv": true,
    "**/__pycache__": true
  },
  "files.watcherExclude": {
    "**/node_modules/*/**": true,
    "**/.git/objects/**": true,
    "**/.venv/**": true
  },

  // --- TERMINAL INTEGRADA (Tu estilo Warp) ---
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font', 'Cascadia Code', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.suggest.enabled": true,

  // --- CONFIGURACIONES ESPECÍFICAS ---
  "[dockercompose]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": true,

  // --- PYTHON & RUFF (Velocidad Pura) ---
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  
  // --- TAILWIND ---
  "headwind.runOnSave": true
}