{
  // --- VISUALIZATION & ZEN MODE (Hardcore Style) ---
  "window.zoomLevel": 0.5,
  "window.titleBarStyle": "custom",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.location": "top", // Or "hidden" for extreme minimalism
  "workbench.statusBar.visible": false, // Very clean
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "workbench.layoutControl.enabled": false,
  "window.commandCenter": false,
  "telemetry.telemetryLevel": "off",

  // --- EDITOR & FONTS (CaskaydiaCove Nerd Font + Ligatures) ---
  "editor.fontFamily": "'CaskaydiaCove Nerd Font', monospace",
  // Enable fancy italics (ss01) and ligatures (calt)
  "editor.fontLigatures": "'calt', 'ss01'", 
  "editor.fontSize": 14,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  
  // --- NAVIGATION IMPROVEMENTS (The 10/10 Touch) ---
  "editor.stickyScroll.enabled": true, // ESSENTIAL: Keeps func/class name at top
  "editor.bracketPairColorization.enabled": true, // Native and fast
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.renderWhitespace": "selection", // Only show whitespace dots on selection

  // --- SUGGESTIONS & INTELLIGENCE ---
  "editor.inlayHints.enabled": "offUnlessPressed", // Less visual noise: only show if holding Ctrl/Cmd
  "editor.inlineSuggest.enabled": true,
  "editor.semanticHighlighting.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true // Vital for Tailwind inside strings in React
  },

  // --- THEME & ICONS ---
  "workbench.colorTheme": "GitHub Dark Colorblind (Beta)",
  // NOTE: If you installed Material Icon Theme, change "symbols" to "material-icon-theme"
  "workbench.iconTheme": "symbols", 
  // NOTE: If you installed Carbon Product Icons, change "fluent-icons" to "carbon-product-icons"
  "workbench.productIconTheme": "fluent-icons",
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#00000044", // Subtle highlight
    "editor.lineHighlightBorder": "#ffffff11"
  },
  
  // --- PREMIUM FONTS (Operator Mono Style) ---
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "keyword",
          "storage",
          "storage.type",
          "entity.other.attribute-name",
          "variable.language.this",
          "variable.language.super"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },

  // --- EXPLORER CLEANUP (Nesting) ---
  "explorer.fileNesting.enabled": true, // GROUPS related files
  "explorer.fileNesting.patterns": {
    "package.json": "package-lock.json, .npmrc, yarn.lock, pnpm-lock.yaml",
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "requirements.txt": "requirements-dev.txt",
    ".env": ".env.*" 
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true, // Hide Python garbage
    "**/*.pyc": true
  },

  // --- FRONTEND AUTOMATION ---
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit" // "Explicit" is safer than "always" to avoid loops
  },
  "prettier.requireConfig": true,
  "prettier.semi": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.confirmSync": false,
  "git.autofetch": true, // Keep your Git updated automatically

  // --- PERFORMANCE ---
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/build": true,
    "**/.venv": true,
    "**/__pycache__": true
  },
  "files.watcherExclude": {
    "**/node_modules/*/**": true,
    "**/.git/objects/**": true,
    "**/.venv/**": true
  },

  // --- INTEGRATED TERMINAL (Warp Style) ---
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font', 'Cascadia Code', monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.5,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.scrollback": 5000,
  "terminal.integrated.suggest.enabled": true,

  // --- SPECIFIC CONFIGURATIONS ---
  "[dockercompose]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "security.workspace.trust.untrustedFiles": "open",
  "extensions.ignoreRecommendations": true,

  // --- PYTHON & RUFF (Pure Speed) ---
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  
  // --- TAILWIND ---
  "headwind.runOnSave": true
}